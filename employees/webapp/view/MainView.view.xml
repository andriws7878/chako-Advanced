<mvc:View
    controllerName="chakoapp.employees.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                         <HBox>
                            <Label id="labelEmployee" text="{i18n>labelEmployee}" class="sapUiSmallMargin" labelFor="inputEmpleyee"/>
                            <Input id="inputEmpleyee" maxLength="6" width="200px" class="sapUiSmallMarginEnd" liveChange="onValidate"/>
                            <Label id="labelCountry" text="{i18n>labelCountry}" class="sapUiSmallMargin" labelFor="slCountry" visible="false"/>
                            <Select id="slCountry" forceSelection="false" visible="false">
                                <items>
                                    <core:Item key="US" text="{i18n>countryUS}"></core:Item>
                                    <core:Item key="UK" text="{i18n>countryUK}"></core:Item>
                                    <core:Item key="ES" text="{i18n>countryES}"></core:Item>
                                </items>
                            </Select>
                        </HBox>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
