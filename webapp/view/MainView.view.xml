<mvc:View
    controllerName="chakoapp.employees.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                         <HBox>
                            <Label id="labelEmployee" text="{i18n>labelEmployee}" class="sapUiSmallMargin" labelFor="inputEmpleyee"/>
                            <Input id="inputEmpleyee" value="{jsonCoutries>/EmployeeId}" maxLength="6" width="200px" class="sapUiSmallMarginEnd"/>
                            <Label id="labelCountry" text="{i18n>labelCountry}" class="sapUiSmallMargin" labelFor="slCountry" visible="true"/>
                            <Select id="slCountry" selectedKey="{jsonCoutries>/CountryKey}" forceSelection="false" items="{jsonCoutries>/ListCountry}" visible="true" class="sapUiSmallMarginEnd">
                                <items>
                                    <core:Item key="{jsonCoutries>Key}" text="{jsonCoutries>Text}"></core:Item>
                                </items>
                            </Select>
                            <Button id="btnFilter" text="{i18n>btnFilter}" icon="sap-icon://search" press="onFilter" class="sapUiSmallMarginEnd"/>
                            <Button id="btnClearFilter" text="{i18n>btnClearFilter}" icon="sap-icon://clear-filter" press="onClearFilter" class="sapUiSmallMarginEnd"/>
                        </HBox>
                        <HBox>
                            <Panel>
                                <Button id="btnShowCity" text="{i18n>btnShowCity}" visible="{jsonConfig>/visibleBtnShowCity}" icon="sap-icon://navigation-right-arrow" press="onShowCity" class="sapUiSmallMarginEnd"/>
                                <Button id="btnHideCity" text="{i18n>btnHideCity}" visible="{jsonConfig>/visibleBtnHideCity}" icon="sap-icon://navigation-left-arrow" press="onHideCity" class="sapUiSmallMarginEnd"/>
                                <Table id="tableEmployee" items="{jsonEmployees>/Employees}">
                                    <columns>
                                        <Column visible="{jsonConfig>/visibleID}">
                                            <header>
                                                <Label text="{i18n>tableId}"/>
                                            </header>
                                        </Column>
                                        <Column visible="{jsonConfig>/visibleName}">
                                            <header>
                                                <Label text="{i18n>tableName}"/>
                                            </header>
                                        </Column>
                                        <Column visible="{jsonConfig>/visibleCountry}">
                                            <header>
                                                <Label text="{i18n>tableCountry}"/>
                                            </header>
                                        </Column>
                                        <Column visible="{jsonConfig>/visibleCity}">
                                            <header>
                                                <Label text="{i18n>tableCity}"/>
                                            </header>
                                        </Column>
                                    </columns>
                                    <items>
                                        <ColumnListItem type="Active" press="showPostalCode">
                                            <cells>
                                                <Label text="{jsonEmployees>EmployeeID}"/>
                                                <Label text="{jsonEmployees>LastName}, {jsonEmployees>FirstName}"/>
                                                <Label text="{jsonEmployees>Country}"/>
                                                <Label text="{jsonEmployees>City}"/>
                                            </cells>
                                        </ColumnListItem>
                                    </items>
                                </Table>
                            </Panel>
                        </HBox>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
