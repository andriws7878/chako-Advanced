<mvc:View
    controllerName="chakoapp.employees.controller.EmployeeDetails"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page title="{i18n>employeeDetails}">
        <Panel>
            <FlexBox height="65px" alingItems="Center" justifyContent="Center">
                <items>
                     <Text text="{jsonEmployees>LastName}, {jsonEmployees>FirstName}" class="boldText"/>
                </items>
            </FlexBox>
            <FlexBox height="45px" alingItems="Start" justifyContent="SpaceBetween">
                <items>
                    <VBox>
                        <Text text="{i18n>employeeID}" class="boldText sapUiTinyMarginEnd"/>
                        <Text text="{jsonEmployees>EmployeeID}"/>
                     </VBox>
                     <VBox>
                        <Text text="{i18n>titleEmployee}" class="boldText"/>
                        <Text text="{jsonEmployees>Title}"/>
                     </VBox>
                </items>
            </FlexBox>
             <FlexBox alingItems="Start">
                <items>
                    <HBox>
                        <Text text="{i18n>countryCode}" class="boldText sapUiTinyMarginEnd"/>
                        <Text text="{jsonEmployees>Country}"/>
                        <layoutData>
                            <FlexItemData growFactor="2"/>
                        </layoutData>
                    </HBox>
                    <HBox>
                        <Text text="{i18n>city}" class="boldText sapUiTinyMarginEnd"/>
                        <Text text="{jsonEmployees>City}"/>
                        <layoutData>
                            <FlexItemData growFactor="2"/>
                        </layoutData>
                    </HBox>
                    <FlexBox direction="Row" alingItems="Start">
                        <Text text="{i18n>postalCode}" class="boldText sapUiTinyMarginEnd"/>
                        <Text text="{jsonEmployees>PostalCode}"/>
                        <layoutData>
                            <FlexItemData growFactor="0"/>
                        </layoutData>
                    </FlexBox>
                </items>
            </FlexBox>
        </Panel>       
    </Page>
</mvc:View>